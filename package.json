{
  "name": "elysia-timer-widget",
  "version": "1.0.0",
  "description": "A timer widget API built with ElysiaJS and Bun",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun src/index.ts",
    "preview": "node dist/index.js",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:integration": "bun test tests/integration/*.test.ts",
    "test:unit": "bun test tests/unit/*.test.ts",
    "type-check": "tsc --noEmit",
    "lint": "bunx eslint src/**/*.ts --fix",
    "format": "bunx prettier --write src/**/*.ts tests/**/*.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/node": "^1.3.0",
    "@elysiajs/static": "^1.3.0",
    "bonjour-service": "^1.3.0",
    "elysia": "^1.4.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.15.30",
    "@types/ws": "^8.18.1",
    "bun-types": "latest",
    "ws": "^8.18.3"
  },
  "module": "src/index.js"
}
